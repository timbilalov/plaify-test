.page-header
    background-color gray-bg
    box-sizing border-box

    &__logo
        position relative
        font-weight bold
        display block
        transition opacity trs-time-default

        .svg-icon
            width 3em
            height @width
            margin-right 0.5em

    &__top-row
        box-sizing border-box
        padding 2em 0

    &__content
    &__top-row
        display flex
        flex-wrap wrap
        justify-content space-between
        align-items center

    &__container
        position relative


    /*
       Adaptive
       ========================================================================== */

    +above(bp-mobile-menu)
        &__burger
            display none

        &__container
            padding 0 site-paddings

    +below(bp-mobile-menu)
        trs-time = 0.6s

        &__top-row
        &__nav
            width 100%
            box-sizing border-box
            padding-left site-paddings
            padding-right @padding-left

        &__top-row
            position relative
            z-index 3
            background-color gray-bg

        &__nav
            position absolute
            z-index 2
            left 0
            top 0
            top 100%
            width 100%
            background-color gray-bg
            pointer-events none
            box-sizing border-box
            padding 1rem site-paddings 3rem
            transition all trs-time
            transform translate(0, -100%)
            background-color lighten(gray-bg, -20)


        &:after
            content ""
            position fixed
            left 0
            top 0
            width 100%
            height 1000rem
            height 200vh
            background-color white
            z-index 1
            transition opacity trs-time
            opacity 0
            pointer-events none

        &.is-opened
            &:after
                opacity 0.85

            & ^[0]
                &__nav
                    opacity 1
                    pointer-events auto
                    transform translate(0, 0)
                    background-color gray-bg