@keyframes swipe-from-right
    from
        transform translate(100%, 0)

    to
        transform translate(0, 0)

@keyframes swipe-from-left
    from
        transform translate(-100%, 0)

    to
        transform translate(0, 0)

.slider
    margin 2rem 0

    w = s-arr-next--common[4] + 20px

    &__wrapper
        position relative
        padding-left w
        padding-right @padding-left

    &__container
        aspect-ratio(1920, 1080)
        min-height rel-size(250px)
        overflow hidden
        z-index 1
        background-color white

    &__item
        full-sized()

        img
            full-sized()
            object-fit cover

        &.is-current
            z-index 1

        &.is-next
        &.is-prev
            z-index 2

        &.is-next
            animation swipe-from-left 0.5s

        &.is-prev
            animation swipe-from-right 0.5s

    &__btn
        position absolute
        width w
        height 100%
        top 0

        &:before
            content ""
            width rel-size(150px)
            height (@width * 3)
            max-height 60%
            border-radius 100%
            box-shadow 0 0 @width form-focus-color
            background-color form-focus-color
            transition opacity trs-time-default
            opacity 0
            position absolute
            top 50%

        &:after
            content ""
            position absolute
            top 50%
            transform translate(0, -50%)
            transition opacity trs-time-default
            opacity 0.5

        &:hover
            &:before
                opacity 0.5

            &:after
                opacity 1

        &--next
            right 0

            &:before
                left 0
                transform translate(-100%, -50%)

            &:after
                right 0
                sprite("arr-next")

        &--prev
            left 0

            &:before
                right 0
                transform translate(100%, -50%)

            &:after
                left 0
                sprite("arr-prev")