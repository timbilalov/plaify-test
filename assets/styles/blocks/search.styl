.search
    &__filters
        display flex
        justify-content space-between

    &__col
        width 50%
        margin-right site-paddings

        &:last-child
            margin-right 0

    &__list
        margin-top 2rem

    &__item
        display flex
        justify-content space-between
        height rel-size(200px)
        overflow hidden
        border 1px solid lighten(black, 70)
        margin 1rem 0

        &:last-child
            margin-bottom 0

    poster-width = 25%

    &__poster
        width poster-width
        position relative
        height 100%
        overflow hidden

        img
            full-sized()
            object-fit cover

    &__text
        width (100% - poster-width)
        padding 1rem
        overflow hidden
        position relative

        p
            margin 0

        &:after
            content ""
            pointer-events none
            background linear-gradient(to top, alpha(white, 1) 0,  alpha(white, 1) 25%, alpha(white, 0) 100%)
            position absolute
            left 0
            bottom 0
            width 100%
            height 2rem

    &__title
        font-size 1.2em
        margin 0 0 0.5em

    &__empty
        text-align center

        img
            display block
            width auto
            height auto
            max-width 100%
            max-height rel-size(200px)
            margin 0 auto 1rem